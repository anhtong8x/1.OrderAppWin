@model TN.Domain.Model.ChangePasswordViewModel
@addTagHelper *, Sakura.AspNetCore.Mvc.PagedList
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<form form-edit asp-action="ChangePassword">
    @Html.AntiForgeryToken()
    <div class="block-header">
        <h2><i class="material-icons">refresh</i> ĐỔI MẬT KHẨU <span class="label label-primary label-t">Cập nhật</span></h2>
        <ol class="breadcrumb breadcrumb-t">
            <li>
                <a href="/Admin">
                    <i class="material-icons">home</i> Trang điều khiển
                </a>
            </li>
            <li class="active">
                Đổi mật khẩu tài khoản
            </li>
        </ol>
    </div>
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card card-t">
                <div class="body body-tab">
                    <ul class="nav nav-tabs nav-tabs-t" role="tablist">
                        <li role="presentation">
                            <a asp-action="Profile" asp-controller="Account" asp-area="User">
                                <i class="material-icons">person</i> Thông tin tài khoản
                            </a>
                        </li>
                        <li  class="active">
                            <a>
                                <i class="material-icons">refresh</i> Đổi mật khẩu
                            </a>
                        </li>
                    </ul>
                    <div class="tab-content tab-content-t">
                        <div role="tabpanel" class="tab-pane fade active in">
                            <div class="form-group">
                                <label class="form-label" asp-for="OldPassword"></label> <strong class="text-danger">*</strong> <span asp-validation-for="OldPassword"></span>
                                <div class="controls">
                                    <input type="password" class="form-control input-sm form-control-t" placeholder="Mật khẩu cũ của bạn" asp-for="OldPassword">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="form-label" asp-for="NewPassword"></label> <strong class="text-danger">*</strong> <span asp-validation-for="NewPassword"></span>
                                <div class="controls">
                                    <input type="password" class="form-control input-sm form-control-t" placeholder="Mật khẩu mới" asp-for="NewPassword">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="form-label" asp-for="ConfirmPassword"></label> <strong class="text-danger">*</strong> <span asp-validation-for="ConfirmPassword"></span>
                                <div class="controls">
                                    <input type="password" class="form-control input-sm form-control-t" placeholder="Nhập lại mật khẩu mới" asp-for="ConfirmPassword">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 mb-0">
                                    <div class="divbtnform">
                                        <button button-submit data-loading-text="<i class='material-icons icon-spin'>autorenew</i> <span>Lưu thay đổi</span>" type="button" class="btn  btn-p-t  btn-icon bg-indigo waves-effect"><i class="material-icons">save</i> <span>Lưu thay đổi</span></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script>
        $("[button-submit]").toSubmit();
    </script>
}
